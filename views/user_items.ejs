<!DOCTYPE html>
<html lang="en">

<head>
  <title>User's Items for Sale</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/components.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <!-- <script defer src="/scripts/mainfeed.js"></script> -->
</head>

<body>

  <main>
    <a href="/">Back</a>
    <h1>Items You Have For Sale</h1>
    <a class="back-button" href="/">Back</a>
    <% for (let item of items) { %>
      <div class="item-card">
        <h3><%= item.title %></h3>
        <% if (item.sold) { %>
          <p>SOLD</p>
        <% } %>
        <p><%= item.price_cents %></p>
        <p><%= item.description %></p>
        <img src="<%= item.image_url %>" alt="<%= item.title %>">
        <a href="/items/<%= item.id %>/sold">Mark as Sold</a>
        <a href="/items/<%= item.id %>/delete">Delete Listing</a>
      </div>
    <% } %>
  </main>
</body>

</html>
